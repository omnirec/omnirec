{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "omnirec-app",
  "version": "0.1.4",
  "identifier": "com.omnirec.omnirec",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "OmniRec",
        "width": 375,
        "height": 488,
        "resizable": false,
        "maximizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app", "deb", "rpm", "appimage"],
    "externalBin": [
      "binaries/omnirec-cli"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "icons/tray/*": "icons/tray/",
      "icons/32x32.png": "icons/32x32.png",
      "icons/64x64.png": "icons/64x64.png",
      "icons/128x128.png": "icons/128x128.png"
    },
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": "Developer ID Application: Keath Milligan (WMYVSJCH96)"
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "ffmpeg",
          "pipewire",
          "libappindicator3-1"
        ]
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "ffmpeg-free",
          "pipewire",
          "libappindicator-gtk3"
        ]
      }
    }
  }
}
